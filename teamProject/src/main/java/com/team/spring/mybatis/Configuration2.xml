<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias type="com.team.spring.users_mp.dto.UsersDto" alias="usersDto"/>
		<!-- 자유게시판 -->
		<typeAlias type="com.team.spring.freeboard.dto.FreeBoardDto" alias="freeboardDto"/>
		<typeAlias type="com.team.spring.freeboard.dto.FreeBoardCommentDto" alias="freeboardCommentDto"/>
		<!-- 질문게시판 -->
		<typeAlias type="com.team.spring.ask.dto.AskDto" alias="askDto"/>
		<typeAlias type="com.team.spring.ask.dto.AskCommentDto" alias="askCommentDto"/>
		<typeAlias type="com.team.spring.user.dto.UserDto" alias="userDto"/>
		<typeAlias type="com.team.spring.user.dto.UserCommentDto" alias="userCommentDto"/>
	</typeAliases>
	
	<mappers>
		<!-- 회원 -->
		<mapper resource="com/team/spring/mybatis/UsersMapper.xml"/>
		<!-- 자유게시판 -->	
		<mapper resource="com/team/spring/mybatis/FreeBoardMapper.xml"/>
		<mapper resource="com/team/spring/mybatis/FreeBoardCommentMapper.xml"/>
		<!-- 질문게시판 -->
		<mapper resource="com/team/spring/mybatis/AskMapper.xml" />
		<mapper resource="com/team/spring/mybatis/AskCommentMapper.xml" />
		<mapper resource="com/team/spring/mybatis/UserMapper.xml"/>
		<mapper resource="com/team/spring/mybatis/UserCommentMapper.xml"/>		
	</mappers>	
</configuration>











